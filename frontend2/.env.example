# Frontend Environment Variables
# Copiar a .env.local y rellenar por entorno

# API
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_SYNC_URL=http://localhost:8001/sync
REACT_APP_API_TIMEOUT=10000

# App
REACT_APP_APP_NAME=Agrotour
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_SYNC_ENGINE=true
REACT_APP_DEBUG_MODE=true

# Maps
REACT_APP_MAPBOX_TOKEN=pk_test_xxx
REACT_APP_GOOGLE_MAPS_API_KEY=AIzaSy_xxx
REACT_APP_DEFAULT_MAP_CENTER=[-33.8688, -51.2093]
REACT_APP_DEFAULT_MAP_ZOOM=13

# Stripe (Fase 4)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_xxx

# Analytics (Fase 11)
REACT_APP_SENTRY_DSN=https://xxx@sentry.io/xxx

# Device ID (Sync)
REACT_APP_DEVICE_ID=web_1

# Logging
REACT_APP_LOG_LEVEL=info
