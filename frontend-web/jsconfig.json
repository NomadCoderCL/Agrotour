{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/contexts/*": [
                "src/contexts/*"
            ],
            "@/services/*": [
                "src/services/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/lib/*": [
                "src/lib/*"
            ],
            "@/types/*": [
                "src/types/*"
            ],
            "@/pages/*": [
                "src/pages/*"
            ],
            "@/config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}